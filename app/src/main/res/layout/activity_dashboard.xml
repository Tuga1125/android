<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFade"
    tools:context=".Activity.Dashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Dashboard!"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/txtSearch"
            android:text="Search Locations"
            android:textSize="20sp"
            android:textAlignment="center"
            android:background="@color/pinky"
            android:textColor="@color/yellowlite"
            android:fontFamily="sans-serif-black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


     <GridLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:rowCount="3"
         android:columnCount="2"
         android:layout_margin="5dp"
         android:alignmentMode="alignMargins"
         android:layout_gravity="center_horizontal"
         android:columnOrderPreserved="false">


         <androidx.cardview.widget.CardView
             android:layout_width="170dp"
             android:layout_height="170dp"
             android:layout_margin="10dp"
             app:cardElevation="5dp"
             app:cardBackgroundColor="@color/yellowlite"
             app:cardCornerRadius="12dp"
             >

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_gravity="center"
                 android:orientation="vertical"
                 >

                 <ImageView
                     android:layout_width="100dp"
                     android:layout_height="100dp"
                     android:layout_gravity="center"
                     android:layout_marginTop="12dp"
                     android:src="@drawable/icon2"/>

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Food"
                     android:layout_gravity="center"
                     android:textSize="25sp"
                     android:textColor="@color/black"
                     android:layout_marginTop="20dp"/>
             </LinearLayout>

         </androidx.cardview.widget.CardView>
         <androidx.cardview.widget.CardView
             android:layout_width="170dp"
             android:layout_height="170dp"
             android:layout_margin="10dp"
             app:cardElevation="5dp"
             app:cardBackgroundColor="@color/yellow"
             app:cardCornerRadius="12dp"
             >

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_gravity="center"
                 android:orientation="vertical"
                 >
                 <ImageView
                     android:layout_width="100dp"
                     android:layout_height="100dp"
                     android:layout_gravity="center"
                     android:layout_marginTop="12dp"
                     android:src="@drawable/icon1"/>

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Order Here"
                     android:layout_gravity="center"
                     android:textSize="25sp"
                     android:textColor="@color/white"
                     android:layout_marginTop="20dp"/>
             </LinearLayout>

         </androidx.cardview.widget.CardView>
         <androidx.cardview.widget.CardView
             android:layout_width="170dp"
             android:layout_height="170dp"
             android:layout_margin="10dp"
             app:cardElevation="5dp"
             app:cardBackgroundColor="@color/pinky"
             app:cardCornerRadius="12dp"
             >

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_gravity="center"
                 android:orientation="vertical"
                 >

                 <ImageView
                     android:layout_width="100dp"
                     android:layout_height="100dp"
                     android:layout_gravity="center"
                     android:layout_marginTop="12dp"
                     android:src="@drawable/money"/>

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Order Here"
                     android:layout_gravity="center"
                     android:textSize="25sp"
                     android:textColor="@color/yellow"
                     android:layout_marginTop="20dp"/>
             </LinearLayout>

         </androidx.cardview.widget.CardView>
         <androidx.cardview.widget.CardView
             android:layout_width="170dp"
             android:layout_height="170dp"
             android:layout_margin="10dp"
             app:cardElevation="5dp"
             app:cardBackgroundColor="@color/colorGreen"
             app:cardCornerRadius="12dp"
             >

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_gravity="center"
                 android:orientation="vertical"
                 >

                 <ImageView
                     android:layout_width="100dp"
                     android:layout_height="100dp"
                     android:layout_gravity="center"
                     android:layout_marginTop="12dp"
                     android:src="@drawable/icon4"/>

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Order Here"
                     android:layout_gravity="center"
                     android:textSize="25sp"
                     android:textColor="@color/pinky"
                     android:layout_marginTop="20dp"/>
             </LinearLayout>

         </androidx.cardview.widget.CardView>
         <androidx.cardview.widget.CardView
             android:layout_width="170dp"
             android:layout_height="170dp"
             android:layout_margin="10dp"
             app:cardElevation="5dp"
             app:cardBackgroundColor="@color/purple"
             app:cardCornerRadius="12dp"
             >

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_gravity="center"
                 android:orientation="vertical"
                 >
                 <ImageView
                     android:layout_width="100dp"
                     android:layout_height="100dp"
                     android:layout_gravity="center"
                     android:layout_marginTop="12dp"
                     android:src="@drawable/icon8"/>

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Order Here"
                     android:layout_gravity="center"
                     android:textSize="25sp"
                     android:textColor="@color/black"
                     android:layout_marginTop="20dp"/>
             </LinearLayout>

         </androidx.cardview.widget.CardView>
         <androidx.cardview.widget.CardView
             android:layout_width="170dp"
             android:layout_height="170dp"
             android:layout_margin="10dp"
             app:cardElevation="5dp"
             app:cardBackgroundColor="@color/gray"
             app:cardCornerRadius="12dp"
             >

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_gravity="center"
                 android:orientation="vertical"
                 >

                 <ImageView
                     android:layout_width="100dp"
                     android:layout_height="100dp"
                     android:layout_gravity="center"
                     android:layout_marginTop="12dp"
                     android:src="@drawable/icon11"/>

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Order Here"
                     android:layout_gravity="center"
                     android:textSize="25sp"
                     android:textColor="@color/white"
                     android:layout_marginTop="20dp"/>
             </LinearLayout>

         </androidx.cardview.widget.CardView>

     </GridLayout>
        <Button
            android:id="@+id/btnAddFooditems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Food Items"
            android:textSize="20sp"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btnViewFooditems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Food Items"
            android:textSize="20sp"
            android:layout_margin="10dp"/>



    </LinearLayout>

</ScrollView>