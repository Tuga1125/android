<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightblue"
    tools:context=".Activity.SearchActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo1"
        android:padding="70dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is for the testing of the proximity sensor. It adds two numbers by sensing the movement of any object near to it. Click below to test the proximity."
        android:textSize="30sp"
        android:padding="30dp"
        />

    <Button
        android:id="@+id/MainbtnSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPink"
        android:textColor="@color/white"
        android:text="Proximity Sensor Test"
        android:padding="20dp"
        android:textSize="20sp"
        android:layout_margin="30dp"/>



</androidx.appcompat.widget.LinearLayoutCompat>